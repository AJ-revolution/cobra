    <!-- Left Gripper -->
  <link name="left_gripper">
    <visual>
      <origin xyz="-0.1 -0.25 0.15" rpy="0 0 0"/>
      <geometry>
        <box size="0.09 0.05 0.05"/> <!-- length 0.09, width matches platform thickness, height small -->
      </geometry>
      <material name="yellow">
        <ambient>1 1 0 1</ambient>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.09 0.05 0.05"/>
      </geometry>
    </collision>
  </link>

  <joint name="left_gripper_joint" type="revolute">
    <axis xyz="1 0 0"/>
    <limit effort="1000" lower="0" upper="0.523599" velocity="1.0"/>
    <parent link="platform"/>
    <child link="left_gripper"/>
    <origin xyz="-0.1 -0.08 0.15" rpy="0 0 0"/>
  </joint>

  <!-- Right Gripper -->
  <link name="right_gripper">
    <visual>
      <origin xyz="-0.1 0.25 0.15" rpy="0 0 0"/>
      <geometry>
        <box size="0.09 0.05 0.05"/>
      </geometry>
      <material name="yellow">
        <ambient>1 1 0 1</ambient>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.09 0.05 0.05"/>
      </geometry>
    </collision>
  </link>

  <joint name="right_gripper_joint" type="revolute">
    <axis xyz="1 0 0"/>
    <limit effort="1000" lower="0" upper="0.523599" velocity="1.0"/>
    <parent link="platform"/>
    <child link="right_gripper"/>
    <origin xyz="-0.1 0.08 0.15" rpy="0 0 0"/>
  </joint>

  <!-- Gazebo ROS2 Control Plugin -->
  <gazebo>
    <plugin name="gazebo_ros2_control" filename="libgazebo_ros2_control.so"/>
  </gazebo>

</robot>
