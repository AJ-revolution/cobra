<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="cobra">
    <xacro:arg name="initial_positions_file" default="initial_positions.yaml" />

    <!-- Import cobra urdf file -->
    <xacro:include filename="$(find cobrotic)/urdf/cobra.urdf" />

    <!-- Import control_xacro -->
    <xacro:include filename="cobra.ros2_control.xacro" />


    <xacro:cobra_ros2_control name="FakeSystem" initial_positions_file="$(arg initial_positions_file)"/>

</robot>
